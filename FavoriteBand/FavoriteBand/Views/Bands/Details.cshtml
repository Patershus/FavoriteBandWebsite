@using FavoriteBand.Models



<!DOCTYPE html>
<html>
<head>
    <title> </title>
    <link href="~/StyleSheet.css" rel="stylesheet" />
</head>
<body>
    <div>
        <h1>@(((Band)ViewData["Band"]).Name)</h1>

        <p>@ViewBag.Band.Description</p>
        <br />
    </div>
    <div>
        <img src=@($"{ViewBag.Band.ImgPath}") />
    </div>
    <div>
        <h4>Albums</h4>
        <ul>
            @foreach (var album in ViewBag.Band.AlbumList)
            {
                <li>@album</li>
            }
        </ul>
    </div>
    <div>
        @Html.ActionLink("Hem", "", "Bands")
    </div>


</body>
</html>
